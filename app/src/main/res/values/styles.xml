<resources>
    <style name="ActivityTransitions" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_up</item>
        <item name="android:activityOpenExitAnimation">@anim/idle</item>

        <item name="android:activityCloseEnterAnimation">@anim/idle</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_down</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Chat">

    </style>

    <style name="Chat.textView" parent="Chat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Chat.textView.title" parent="Chat.textView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Chat.textView.bottom" parent="Chat.textView">
        <item name="android:textColor">@color/color_gray_dark</item>
    </style>

    <style name="Chat.textView.date" parent="Chat.textView">
        <item name="android:textColor">@color/color_gray_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Chat.textView.author" parent="Chat.textView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Chat.counter" parent="Chat">
        <item name="android:minWidth">@dimen/count_size</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_counter</item>
    </style>




    <style name="Profile">

    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Profile.EditText.Single" parent="Profile.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile.EditText.MultiLine" parent="Profile.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">128</item>
    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Header.Nickname" parent="Profile.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="Profile.Header.Rank" parent="Profile.Header">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Metrics" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Metrics.Label" parent="Profile.Metrics">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Metrics.Value" parent="Profile.Metrics">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>
    <style name="Profile.InfoItem">
        <item name="android:paddingTop">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:minHeight">72dp</item>
    </style>

</resources>
