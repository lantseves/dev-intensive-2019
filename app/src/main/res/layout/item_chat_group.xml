<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_normal_16"
    style="@style/Chat.Item">

    <ru.skillbranch.devintensive.ui.custom.CircleImageView
        android:id="@+id/iv_avatar_group"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:layout_alignParentLeft="true"
        android:src="@drawable/avatar_default"
        />

    <TextView
        android:id="@+id/tv_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "chat title"
        style="@style/Chat.textView.title"
        android:layout_toRightOf="@id/iv_avatar_group"
        android:layout_toLeftOf="@id/tv_date_group"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "\@John_Doe"
        style="@style/Chat.textView.author"
        android:layout_toRightOf="@id/iv_avatar_group"
        android:layout_below="@id/tv_title_group"
        android:layout_marginRight="@dimen/spacing_tiny_4"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_message_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Когда я проходил интенсив я мало спал"
        style="@style/Chat.textView.bottom"
        android:layout_toRightOf="@+id/tv_message_author"
        android:layout_below="@id/tv_title_group"
        android:layout_marginRight="@dimen/font_normal_16"
        />

    <TextView
        android:id="@+id/tv_date_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Chat.textView.bottom.date"
        android:text="18:00"/>

    <TextView
        android:id="@+id/tv_counter_group"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/count_size"
        style="@style/Chat.counter"
        tools:text="11"/>

</RelativeLayout>